{
  "name": "wp-plugin-directory-filters",
  "version": "1.0.0",
  "description": "WordPress Plugin Directory Filters - Enhanced filtering for WordPress admin plugin installer",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint assets/js/ tests/js/",
    "lint:fix": "eslint assets/js/ tests/js/ --fix",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.52.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "tests/coverage/js",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/assets/js/$1"
    },
    "globals": {
      "wpPluginFilters": {
        "ajaxUrl": "http://localhost/wp-admin/admin-ajax.php",
        "nonces": {
          "filter_plugins": "test-nonce-123",
          "sort_plugins": "test-nonce-456",
          "calculate_rating": "test-nonce-789",
          "clear_cache": "test-nonce-abc"
        },
        "strings": {
          "loading": "Loading...",
          "error": "An error occurred. Please try again.",
          "noResults": "No plugins found matching your criteria.",
          "rateLimit": "Too many requests. Please slow down.",
          "installations": "Active Installations",
          "all": "All",
          "lastUpdated": "Last Updated",
          "usabilityRating": "Usability Rating",
          "healthScore": "Health Score",
          "stars": "stars",
          "sortBy": "Sort By",
          "relevance": "Relevance",
          "rating": "Rating",
          "sortDirection": "Sort Direction",
          "descending": "Descending",
          "ascending": "Ascending",
          "clearFilters": "Clear Filters",
          "by": "By",
          "usability": "Usability",
          "compatibleWith": "Compatible with",
          "activeInstalls": "active installations",
          "installNow": "Install Now",
          "moreDetails": "More Details",
          "filtersApplied": "Filters applied",
          "today": "Today",
          "yesterday": "Yesterday",
          "daysAgo": "days ago",
          "monthsAgo": "months ago",
          "yearsAgo": "years ago"
        }
      }
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "wordpress",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true,
      "jquery": true,
      "jest": true
    },
    "globals": {
      "wpPluginFilters": "readonly",
      "wp": "readonly",
      "ajaxurl": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "keywords": [
    "wordpress",
    "plugin",
    "filters",
    "admin",
    "installer",
    "testing"
  ],
  "author": "WordPress Community",
  "license": "GPL-2.0-or-later"
}